<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/assistantextrabold"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_bg">


            <TextView
                android:id="@+id/automatic_on_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:layout_marginTop="23dp"
                android:text="Automatic on"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/automatic_on_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn on on startup"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/assistantregular"
                app:layout_constraintStart_toStartOf="@+id/automatic_on_title"
                app:layout_constraintTop_toBottomOf="@+id/automatic_on_title"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:switchTextAppearance="@style/switchStyle"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/automatic_on_title"
                app:layout_constraintBottom_toBottomOf="@id/automatic_on_summary" />

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#1AFFFFFF"
                android:layout_marginTop="17.5dp"
                app:layout_constraintTop_toBottomOf="@+id/automatic_on_summary"
                app:layout_constraintStart_toStartOf="@id/automatic_on_title"
                app:layout_constraintEnd_toEndOf="@id/switch1"/>

            <TextView
                android:id="@+id/stay_on_when_away_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="Stay on when away"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                app:layout_constraintStart_toStartOf="@+id/automatic_on_title"
                app:layout_constraintTop_toBottomOf="@+id/line1"/>

            <TextView
                android:id="@+id/stay_on_when_away_summary"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:text="Stay on after locking the screen or leave the app"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/assistantregular"
                app:layout_constraintStart_toStartOf="@+id/automatic_on_title"
                app:layout_constraintTop_toBottomOf="@+id/stay_on_when_away_title"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/switch1"
                app:layout_constraintTop_toTopOf="@+id/stay_on_when_away_title"
                app:layout_constraintBottom_toBottomOf="@id/stay_on_when_away_summary" />

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#1AFFFFFF"
                android:layout_marginTop="17.5dp"
                app:layout_constraintTop_toBottomOf="@+id/stay_on_when_away_summary"
                app:layout_constraintStart_toStartOf="@id/automatic_on_title"
                app:layout_constraintEnd_toEndOf="@id/switch1"/>

            <TextView
                android:id="@+id/sound_effect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Sound effect"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                app:layout_constraintStart_toStartOf="@+id/automatic_on_title"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/switch1"
                app:layout_constraintTop_toTopOf="@+id/sound_effect_title"
                app:layout_constraintBottom_toBottomOf="@id/sound_effect_title" />

            <View
                android:id="@+id/line5"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#1AFFFFFF"
                android:layout_marginTop="17.5dp"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/sound_effect_title"
                app:layout_constraintStart_toStartOf="@id/automatic_on_title"
                app:layout_constraintEnd_toEndOf="@id/switch1"/>

            <Button
                android:id="@+id/language_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/feedback_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line5"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/language_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Language"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="@+id/automatic_on_title"
                app:layout_constraintTop_toBottomOf="@+id/line5"
                app:layout_constraintBottom_toBottomOf="@id/group1"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group1">

            <Button
                android:id="@+id/remove_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/setting_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/icon_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="27dp"
                android:src="@drawable/ic_general_crown"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/remove_ads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="Remove Ads"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                android:elevation="10dp"
                app:layout_constraintStart_toEndOf="@+id/icon_ad"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/remove_ads_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_general_chevron"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group2">

            <Button
                android:id="@+id/privacy_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/privacy_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/line3"/>

            <TextView
                android:id="@+id/privacy_policy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:layout_marginTop="25dp"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/privacy_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_general_chevron"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/line3"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#1AFFFFFF"
                android:layout_marginTop="17.5dp"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/privacy_policy_title"
                app:layout_constraintStart_toStartOf="@+id/privacy_policy_title"
                app:layout_constraintEnd_toEndOf="@+id/privacy_go"/>

            <Button
                android:id="@+id/share_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/share_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line3"
                app:layout_constraintBottom_toBottomOf="@id/line4"/>
            <TextView
                android:id="@+id/share_with_friends_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:layout_marginTop="25dp"
                android:text="Share with friends"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:elevation="10dp"
                android:fontFamily="@font/assistantextrabold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line3"/>

            <ImageView
                android:id="@+id/share_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_general_chevron"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="@id/line3"
                app:layout_constraintBottom_toBottomOf="@id/line4"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/line4"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#1AFFFFFF"
                android:layout_marginTop="18.5dp"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/share_with_friends_title"
                app:layout_constraintStart_toStartOf="@+id/privacy_policy_title"
                app:layout_constraintEnd_toEndOf="@+id/privacy_go"/>

            <Button
                android:id="@+id/feedback_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/feedback_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line4"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/feedback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27.5dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="FeedBack"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/assistantextrabold"
                android:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line4"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/feedback_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_general_chevron"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="@id/line4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:alpha="0.7"
            android:text="Version 1.0.0"
            android:fontFamily="@font/assistantextrabold"
            app:layout_constraintTop_toBottomOf="@id/group3"
            app:layout_constraintStart_toStartOf="@id/group3"
            app:layout_constraintEnd_toEndOf="@id/group3"/>

    <View
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>

